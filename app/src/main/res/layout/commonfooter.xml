<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="bottom"
      android:gravity="bottom"
      android:clickable="true"
      android:baselineAligned="false">
      
	   <LinearLayout
	      android:id="@+id/mapcollumn"
	      android:layout_width="0dp"
		  android:layout_height="wrap_content"
		  android:layout_weight="1"
		  android:gravity="center">
		  
	       	 <Button
	            android:id="@+id/mapLinkButton"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:background="@drawable/map_icon"
	            android:onClick="goToMap"
	            android:textColor="@color/white"
	            android:textSize="@dimen/button_text_size" />
		</LinearLayout>
		
	    <LinearLayout
	      android:id="@+id/emergencyprocedurescollumn"
	      android:layout_width="0dp"
		  android:layout_height="wrap_content"
		  android:layout_weight="1"
		  android:gravity="center">
	       	<Button
	            android:id="@+id/emergencyLinkButton"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:background="@drawable/emergency_icon_pressed"
	            android:textColor="@color/white"
	            android:textSize="@dimen/button_text_size"
				android:onClick="goToEmergencyInfo"/>
		</LinearLayout>
		
		<LinearLayout
	      android:id="@+id/dialercollumn"
	      android:layout_width="0dp"
		  android:layout_height="wrap_content"
		  android:layout_weight="1"
		  android:gravity="center">
	       	<Button
	            android:id="@+id/dialerLinkButton"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:background="@drawable/dialer_icon"
	            android:textColor="@color/white"
	            android:textSize="@dimen/button_text_size"
	            android:onClick="goToEmergencyDialer" />
		</LinearLayout>
	</LinearLayout>